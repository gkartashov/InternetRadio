<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="station"
            type="com.jg.internetradio.entity.Station" />
        <!-- <variable
            name="callback"
            type="com.jg.internetradio.ui.fragment.categorylist.OnCategoryClick"/>-->
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/station_list_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <!--app:onClickListener="@{() -> callback.onClick(category)}"-->


        <RelativeLayout
            android:id="@+id/station_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/station_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@{station.name}"
                tools:text="Station 1"/>

            <TextView
                android:id="@+id/station_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/station_title"
                android:text="@{station.description}"
                tools:text="Station station Station station Station station Station station Station station"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>